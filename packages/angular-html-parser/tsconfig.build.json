{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": true,
    "rootDir": "..",
    "outDir": "lib",
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "paths": {
      "tslib": ["node_modules/tslib"]
    },
    // prevent looking for types in ../../node_modules
    "typeRoots": ["./node_modules/@types"]
  },
  "files": ["./src/index.ts"]
}
