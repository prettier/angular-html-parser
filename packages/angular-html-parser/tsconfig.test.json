{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "paths": {
      "@angular/*": ["../*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "experimentalResolver": true,
    "moduleTypes": {
      "**/*.ts": "cjs"
    }
  }
}
